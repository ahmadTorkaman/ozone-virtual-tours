# ===========================================
# Ozone Virtual Tours - Environment Variables
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control

# -------------------------------------------
# Database Configuration
# -------------------------------------------
POSTGRES_USER=ozone
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=ozone_tours
POSTGRES_PORT=5432

# Full database URL (constructed from above, or set directly)
DATABASE_URL=postgresql://ozone:change_this_secure_password@postgres:5432/ozone_tours?schema=public

# -------------------------------------------
# Application Configuration
# -------------------------------------------
NODE_ENV=production
PORT=3001

# Base URL (your domain, used for generating links)
BASE_URL=https://yourdomain.com

# CORS origin (frontend URL, same as BASE_URL for single domain setup)
CORS_ORIGIN=https://yourdomain.com

# -------------------------------------------
# Security
# -------------------------------------------
# Session secret (generate a random string: openssl rand -hex 32)
SESSION_SECRET=generate_a_random_32_byte_hex_string_here

# -------------------------------------------
# Logging
# -------------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Log directory (inside container, for file logs)
LOG_DIR=/app/logs

# -------------------------------------------
# HTTP Ports (for Docker)
# -------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# -------------------------------------------
# File Upload Configuration
# -------------------------------------------
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Upload directory (inside container)
UPLOAD_DIR=/app/uploads

# -------------------------------------------
# Optional: Cloudflare R2 Storage (for future)
# -------------------------------------------
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY=
# R2_SECRET_KEY=
# R2_BUCKET=ozone-tours
# R2_PUBLIC_URL=

# -------------------------------------------
# Optional: Email Configuration (for future)
# -------------------------------------------
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@yourdomain.com
